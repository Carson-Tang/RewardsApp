<CustButton@Button>:
    font_size: 32

# put box layouts in grid layout
<CalcGridLayout>:
    id: calculator # create an id so you can access the functions that are in this class
    display: entry # creates text input area referred to as entry (one entry box at top)
    rows: 5
    spacing: 10
    padding: 10

    BoxLayout: # to put inside all rows of calculator
        TextInput:
            id: entry # the id from above
            font_size: 32
            multiline: False # simple calculator

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text # adds number to entry bar when pressed

        CustButton:
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            text: "+"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            text: "*"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: entry.text = ""

        CustButton:
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text) # calls calculate function through the id

        CustButton:
            text: "/"
            on_press: entry.text += self.text