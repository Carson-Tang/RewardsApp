# Reference studentdb.py
#: import main studentdb
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
# separates the list view and items inside the list view
#: import ListItemButton kivy.uix.listview.ListItemButton


StudentDB:

<StudentDB>:
    orientation: "vertical"
    first_name_text_input: first_name
    last_name_text_input: last_name
    student_id_text_input: student_id
    grade12_list: grade12s_list_view
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text: "First name"
        TextInput:
            id: first_name
        Label:
            text: "Last name"
        TextInput:
            id: last_name
        Label:
            text: "Student Number"
        TextInput:
            id: student_id

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Button:
            text: "Submit"
            size_hint_x: 10
            on_press: root.submit_student()
        Button:
            text: "Delete"
            size_hint_x: 10
            on_press: root.delete_student()
        Button:
            text: "Replace"
            size_hint_x: 10
            on_press: root.replace_student()

    ListView:
        id: grade12s_list_view
        adapter:
            ListAdapter(data= ["Grace Leung"], cls= main.StudentListButton)


